{{ 'section-comparison.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;

    }
  }
{%- endstyle -%}

<div
  class="comparison color-{{ section.settings.color_scheme }} gradient section-padding"
  style="--padding-top: {{ section.settings.padding_top }}; --padding-bottom: {{ section.settings.padding_bottom }};"
>
  <div
    class="page-width section-{{ section.id }}-padding {% if settings.animations_reveal_on_scroll %}scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    <div class="comparison-container">
      <div class="comparison-info">
        {% for block in section.blocks %}
          {% if block.type == 'comparison' %}
            <div
              class="comparison-item {% if settings.animations_reveal_on_scroll %}scroll-trigger animate--slide-in{% endif %}"
              {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
              {% endif %}
            >
              <h3 class="comparison-title">{{ block.settings.title }}</h3>
              <div class="comparison-description">
                {{ block.settings.description }}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div
        class="comparison-table-container {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
          style="--animation-order: 1;"
        {% endif %}
      >
        <div class="comparison-brands-header">
          <div class="brand-column feature-column">&nbsp;</div>
          <div class="brand-column barkmate-column">
            <h3 class="brand-title brand-logo">
              {{- 'logo-long-black.svg' | inline_asset_content -}}
            </h3>
          </div>
          <div class="brand-column other-column">
            <h3 class="brand-title">Inne maty</h3>
          </div>
        </div>

        {% for block in section.blocks %}
          {% if block.type == 'comparison_item' %}
            <div class="comparison-brands">
              <div class="brand-column feature-column">
                {{ block.settings.title }}
              </div>
              <div class="brand-column barkmate-column">
                <div class="brand-value">{{ block.settings.value1 }}</div>
              </div>
              <div class="brand-column other-column">
                <div class="brand-value">{{ block.settings.value2 }}</div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Comparison",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "comparison",
      "name": "Comparison",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    },
    {
      "type": "comparison_item",
      "name": "Comparison Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "value1",
          "label": "Value 1"
        },
        {
          "type": "text",
          "id": "value2",
          "label": "Value 2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison",
      "blocks": [
        {
          "type": "comparison",
          "settings": {
            "title": "Product Comparison",
            "description": "<p>Compare features of different products or services to help customers make informed decisions.</p>"
          }
        },
        {
          "type": "comparison_item",
          "settings": {
            "title": "Price",
            "value1": "$99",
            "value2": "$149"
          }
        },
        {
          "type": "comparison_item",
          "settings": {
            "title": "Features",
            "value1": "Basic features",
            "value2": "Advanced features"
          }
        },
        {
          "type": "comparison_item",
          "settings": {
            "title": "Warranty",
            "value1": "1 year",
            "value2": "2 years"
          }
        }
      ]
    }
  ]
}
{% endschema %}
