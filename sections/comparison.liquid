{{ 'section-comparison.css' | asset_url | stylesheet_tag }}

<div
  class="comparison color-{{ section.settings.color_scheme }} gradient section-padding"
  style="--padding-top: {{ section.settings.padding_top }}; --padding-bottom: {{ section.settings.padding_bottom }};"
>
  <div class="page-width">
    <div class="comparison-container">
      <div class="comparison-info">
        {% for block in section.blocks %}
          {% if block.type == 'comparison' %}
            <div class="comparison-item">
              <h2 class="inline-richtext comparison-title {{ section.settings.heading_size }}">
                {{ block.settings.title }}
              </h2>
              <div class="comparison-description">{{ block.settings.description }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="comparison-table-container">
        <table class="comparison-table">
          <thead>
            <tr>
              <th>Feature</th>
              <th>Option 1</th>
              <th>Option 2</th>
            </tr>
          </thead>
          <tbody>
            {% for block in section.blocks %}
              {% if block.type == 'comparison_item' %}
                <tr>
                  <td>{{ block.settings.title }}</td>
                  <td>{{ block.settings.value1 }}</td>
                  <td>{{ block.settings.value2 }}</td>
                </tr>
              {% endif %}
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Comparison",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Large"
        },
        {
          "value": "h0",
          "label": "Extra large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "comparison",
      "name": "Comparison",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    },
    {
      "type": "comparison_item",
      "name": "Comparison Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "value1",
          "label": "Value 1"
        },
        {
          "type": "text",
          "id": "value2",
          "label": "Value 2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison",
      "blocks": [
        {
          "type": "comparison",
          "settings": {
            "title": "Product Comparison",
            "description": "<p>Compare features of different products or services to help customers make informed decisions.</p>"
          }
        },
        {
          "type": "comparison_item",
          "settings": {
            "title": "Price",
            "value1": "$99",
            "value2": "$149"
          }
        },
        {
          "type": "comparison_item",
          "settings": {
            "title": "Features",
            "value1": "Basic features",
            "value2": "Advanced features"
          }
        },
        {
          "type": "comparison_item",
          "settings": {
            "title": "Warranty",
            "value1": "1 year",
            "value2": "2 years"
          }
        }
      ]
    }
  ]
}
{% endschema %}
