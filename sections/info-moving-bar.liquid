{{ 'info-moving-bar.css' | asset_url | stylesheet_tag }}

<div class="info-moving-bar">
  <div class="info-moving-bar__items">
    {% for block in section.blocks %}
      <div class="info-moving-bar__item">
        <img
          src="{{ block.settings.icon | image_url: width: 100 }}"
          alt="{{ block.settings.text }}"
          width="24"
          height="24"
        >
        <span>{{ block.settings.text }}</span>
      </div>
    {% endfor %}
    {% for block in section.blocks %}
      <div class="info-moving-bar__item">
        <img
          src="{{ block.settings.icon | image_url: width: 100 }}"
          alt="{{ block.settings.text }}"
          width="24"
          height="24"
        >
        <span>{{ block.settings.text }}</span>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Info Moving Bar",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [],
  "blocks": [
    {
      "type": "entry",
      "name": "Entry",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}
